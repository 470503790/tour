.view-info .img {
  position: relative;
  height: 316rpx;
  width: 100%;
}

.view-info .img image {
  width: 100%;
  height: 100%;
}

.info{
      padding-top: 6px;
}
.cf{
  height:60px;
}
.info .text{
  width: 70%;
}
.info .fl {
    float: left;
}
.info .name {
    display: block;
    font-size: 15px;
    height: 20px;
    line-height: 20px;
    color: #333;
}
.info .es {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.info .time {
    padding-left: 8px;
    height: 30px;
    line-height: 40px;
    color: #ff500b;
    font-size:16px;
}
.info .pri {
    width: 30%;
}
.info .fr {
    float: right;
}
.info .price {
    font-size: 16px;
    color: #ff500b;
    font-family: arial, helvetica,sans-serif;
    line-height: 1;
    text-align: center;
}
.info .btm {
    display: block;
    width: 90%;
    height: 26px;
    line-height: 26px;
    background: #ff500b;
    font-size: 15px;
    text-align: center;
    color: #fff;
    margin: 6px auto 0;
    border-radius: 5px;
}